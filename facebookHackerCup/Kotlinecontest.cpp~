#include<iostream>
#include<algorithm>
#include<vector>
#include<map>
using namespace std;
int main(){

	  int size;
	  int T;
	  vector<int>vs;

	  vector<int>vs2;

	  cin>>T;

	  while(T--){

		   
           int count1=0;

		   int m;
		   cin>>size;

		   for(int i=0;i<size;i++){


			    cin>>m;
				vs.push_back(m);
		   }

		    auto ans=max_element(vs.begin(),vs.end());

		    for(int i=0;i<=vs.size();i++){

				if(*ans!=vs[i]){

					 count1+=1;
					 break;
				}
			}

		cout<<count1<<endl;
	  }
}
